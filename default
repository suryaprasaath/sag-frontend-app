server {
  charset utf-8;
  listen 80 default_server;
  server_name _;

  # angular app & front-end files
  location / {
    root /usr/local/nginx/html;
    try_files $uri /index.html;
  }

  # node api reverse proxy
  location /login/ {
    proxy_pass http://localhost:3000/login;
  }location /createUser/ {
    proxy_pass http://localhost:3000/createUser;;
  }
}